@model PagedList.IPagedList<SmartTourWeb.Models.smt_location>
@using PagedList;
@using PagedList.Mvc;
@if ((int)Session["CurrentCulture"] == 1)
{ ViewBag.Title = "List " + @ViewBag.Category_en; }
else
{ ViewBag.Title = "Danh sách các " + @ViewBag.Category; }
@{
