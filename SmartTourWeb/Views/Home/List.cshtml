    </div>
}
@functions{
    string trimString(string str, int length)
    {
        if (str == null)
        {
            str = "";
        }
        if (str.Length > length)
        {
            return str.Substring(0, length) + " ...";
        }
        else
        {
            return str;
        }
    }
}