    <script src="~/Scripts/streamvideo.js"></script>
    <script src="~/Scripts/streamvideo_en.js"></script>
    <script src="~/Scripts/limitdes.js"></script>
}
@if ((int)Session["CurrentCulture"] == 1) // English
{
