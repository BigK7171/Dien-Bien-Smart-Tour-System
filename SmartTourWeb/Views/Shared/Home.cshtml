<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="icon" href="~/Images/theme/favicon.ico" />
    <meta name="viewport" content="width=device-width; initial-scale=1" />
    <link href="~/Content/themes/shared.css" rel="stylesheet" />
    <link href="~/Content/themes/Home/Home.css" rel="stylesheet" />
    <link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" media="screen,projection" href="~/Content/ui.totop.css" />
    <link href="~/Content/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/tool/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/tool/bootstrap-theme.min.css" rel="stylesheet" />

    @*<script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>*@
    @*<script type="text/javascript" src="http://rilwis.googlecode.com/svn/trunk/weather.js"></script>*@
    <script src="~/Scripts/weather.js"></script>
    <script src="~/Scripts/weather_en.js"></script>
    @*  <script src="~/Scripts/jquery-2.1.1.min.js"></script>*@

</head>
<body>
    <div class="main">

        <div class="head-img">
            <div class="logo_footer">
                <span style="margin: 0px 26px;">
                    <img src="~/Images/theme/dienbien_logo.png" /><img src="~/Images/theme/thainguyen_logo.png" />
                </span>
                <div class="language">
                    @{
                        System.Globalization.CultureInfo currentCulture = System.Threading.Thread.CurrentThread.CurrentCulture;                    
                        <a href="/Home/ChangeCurrentCulture/0">
                            <img src="~/Images/theme/vietnam.jpg" /></a>
                        <a href="/Home/ChangeCurrentCulture/1">
                            <img src="~/Images/theme/english.jpg" /></a>               
                    }
                </div>
            </div>
            <div class="title-header">@Resources.Resource.title</div>
        </div>

        @{Html.RenderAction("Menudropdown", "Home");}

        <div id="wrapper" class="boxed">
            @{Html.RenderAction("Slideshow", "Home");}
        </div>

        <div id="searchArea">
            @if ((int)Session["CurrentCulture"] == 1) // English
            { <div>@{Html.RenderAction("Search_en", "Home");}</div>
                <br /> }
            else  // Vietnames
            { <div>
                @{Html.RenderAction("Search", "Home");}
            </div>
                <br />}
        </div>
        <div class="renderbody">
            <br />
            <aside style="float: right; margin: 12px 26px; width: 260px; border: 1px solid rgb(255, 255, 255);" id="sidebar" role="complementary">

                <style type="text/css">
                    .widget-archive li:before
                    {
                        margin-right: 7px;
                        color: #DED8D8;
                        font-family: 'FontAwesome';
                        content: '\f0a9';
                    }

                    .widget-archive.cate > li
                    {
                        font-weight: bold;
                    }

                    .widget-archive.cate ul
                    {
                        margin-left: 20px;
                    }

                    .widget-archive.cate > li ul li
                    {
                        background: none !important;
                    }

                    h5, .h5
                    {
                        font-size: 15px;
                        text-transform: uppercase;
                        color: #186DEE;
                        border-bottom: 1px solid #186DEE;
                        padding-top: 7px;
                        padding-bottom: 4px;
                        font-weight: bold;
                    }
                </style>

                @*<div class="widget" style="padding-top: 14px;">
                    <iframe frameborder="0" marginwidth="0" marginheight="0" src="http://www.reviewcompany.vn/free-service/?woeid=1252431" width="260" height="253" scrolling="yes"></iframe> 
                </div>*@
                <div class="widget">
                    <h5>@Resources.Resource.forecast</h5>
                    <div class="weather">
                        <div><a href="/Home" style="font-weight: bold; color: #F00">@Resources.Resource.place</a></div>
                        @if ((int)Session["CurrentCulture"] == 1)
                        {
                            <script type="text/javascript">
                                showWeather_en('sonla, vietnam');
                            </script>
                        }
                        else
                        {
                            <script type="text/javascript">
                                showWeather('sonla, vietnam');
                            </script>
                        }
                    </div>
                </div>

                @{Html.RenderAction("ListSupporters", "Home");}

                <div class="widget">
                    <style type="text/css">
                        ul > li
                        {
                            margin: 5px 0px;
                        }
                    </style>
                    <h5>@Resources.Resource.linkto</h5>
                    <ul>
                        <li><a href="http://svhttdldienbien.gov.vn/" target="_blank">
                            <img src="~/Images/link-sovh.png" width="260px" height="114px" alt="Dien Bien is not located" /></a></li>
                        <li><a href="http://dulichviet.com.vn/" target="_blank">
                            <img src="~/Images/dulich_corp.png" width="260px" height="121px" /></a></li>
                    </ul>
                </div>

                <div class="widget widget-archive">
                    @{Html.RenderAction("MostPopularPosts", "Home");}
                </div>

            </aside>

            @RenderBody()
        </div>

        <footer style="border-bottom: 1px solid #FFF; color: #FFF; background: transparent url(/Images/test/bg_footer.png) repeat-x scroll center top; height: 112px; width: 1075px; margin: 0px; padding: 0px 20px; overflow: hidden;">

            @if ((int)Session["CurrentCulture"] == 1)
            {
                <div class="col-xs-7 col-sm-7 col-md-8 col-lg-8 widget" style="padding: 14px 0px 0px;">
                    <ul>
                        <li>©Copyright 2015 - DIEN BIEN SMART TOUR SYSTEM</li>
                        <li>Contact information: Vinh Vu Thanh</li>
                        <li>Phone Number:0945.256.866 </li>
                        <li>Email: vtvinhtnu@gmail.com</li>
                    </ul>
                </div>
        
            }
            else
            {
                <div class="col-xs-7 col-sm-7 col-md-8 col-lg-8 widget" style="padding: 14px 0px 0px;">
                    <ul>
                        <li>Bản quyền © 2015 - HỆ THỐNG DU LỊCH THÔNG MINH TỪ XA ĐIỆN BIÊN</li>
                        <li>Thông tin liên hệ: Vũ Thành Vinh</li>
                        <li>Điện thoại:0945.256.866</li>
                        <li>Email:vtvinhtnu@gmail.com</li>
                    </ul>
                </div>
            }
        </footer>
        <!-- END FOOTER -->
    </div>
    <!-- j-query for back-to-top button -->
    <!-- UItoTop plugin -->
    <script src="~/Scripts/js-back-to-top/jquery.ui.totop.js" type="text/javascript"></script>
    <!-- Starting the plugin -->
    <script type="text/javascript">
        $(document).ready(function () {

            $().UItoTop({ easingType: 'easeOutQuart' });

        });
    </script>
</body>
</html>

<script type="text/javascript">
    function heartBeat() {
        $.get("KeepAlive.ashx?", function (data) { });
    }
    $(function () {
        setInterval("heartBeat()", 1000 * 60); // 60s gửi request một lần
    });
</script>

