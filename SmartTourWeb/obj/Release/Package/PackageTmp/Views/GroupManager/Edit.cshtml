@model SmartTourWeb.Models.group

@{
    ViewBag.Title = "Sửa nhóm";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<h2>Sửa nhóm</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <table class="TableUpdate" border="1">
        <tbody>
            <tr>
                <td class="Control" colspan="2">
                    <ul>
                        <li>
                            <input type="submit" value="Lưu lại" class="uupdate" /></li>
                        <li>@Html.ActionLink("Quay lại", "Index", null, new { @class = "vback" })</li>
                    </ul>
                </td>
            </tr>
            <tr>
                <th>

      Mã nhóm
                </th>
                <td class="text valid">
                    @Html.DisplayFor(model => model.id)
                    @Html.HiddenFor(model => model.id)
                </td>
            </tr>
            <tr>
                <th>
           Tên nhóm
                </th>
                <td class="text valid tbold">
            @Html.DisplayFor(model => model.group_name)
            @Html.HiddenFor(model => model.group_name)
                </td>
            </tr>
            <tr>
                <td class="Control" colspan="2">
                    <ul>
                        <li>
                            <input type="submit" value="Lưu lại" class="uupdate" /></li>
                        <li>@Html.ActionLink("Quay lại", "Index", null, new { @class = "vback" })</li>
                    </ul>
                </td>
            </tr>
    </table>
}
